{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/demos/*"
    ]
  },
  "scripts": {
    "build:demos": "lerna bootstrap && lerna run build --scope {'@dxos/demo-task-app,@dxos/sanity'} --stream",
    "build:site": "lerna bootstrap && lerna run build --scope {'@dxos/typefaces,@dxos/demo-task-app,@dxos/sanity,@dxos/showcase,@dxos/web'} --stream",
    "dev:site": "lerna bootstrap && lerna run dev --parallel --scope {'@dxos/typefaces,@dxos/demo-task-app,@dxos/sanity,@dxos/showcase,@dxos/web'} --stream",
    "clean": "lerna run clean"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
